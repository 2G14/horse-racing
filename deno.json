{
  "tasks": {
    "dev": "deno run --watch src/main.ts"
  },
  "imports": {
    "@std/assert": "jsr:@std/assert@1",
    "@/": "./src/"
  },
  "lint": {
    "include": ["src/"],
    "rules": {
      "tags": ["recommended"]
    }
  },
  "fmt": {
    "useTabs": false,
    "lineWidth": 120,
    "indentWidth": 2,
    "semiColons": true,
    "singleQuote": true,
    "proseWrap": "never",
    "include": ["src/"]
  }
}
